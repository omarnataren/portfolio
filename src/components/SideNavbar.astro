---
const { class: className } = Astro.props;
---

<nav class:list={["nav-capsule hidden md:flex", className]}>
    <a href="#inicio" aria-label="Inicio" class="side-nav-item group">
        <i class="fas fa-home text-lg"></i>
        <span class="nav-label">Inicio</span>
    </a>    

    <a href="#proyectos" aria-label="Proyectos" class="side-nav-item group">
        <i class="fas fa-code text-lg"></i>
        <span class="nav-label">Proyectos</span>
    </a>

    <a href="#sobre-mi" aria-label="Sobre Mí" class="side-nav-item group">
        <i class="fas fa-user text-lg"></i>
        <span class="nav-label">Sobre Mí</span>
    </a>

    <a href="#contacto" aria-label="Contacto" class="side-nav-item group">
        <i class="fas fa-envelope text-lg"></i>
        <span class="nav-label">Contacto</span>
    </a>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const nav = document.querySelector('.nav-capsule');
        
        // Detectar clicks en enlaces que llevan a otras páginas para animar salida
        document.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', (e) => {
                const href = link.getAttribute('href');
                const target = link.getAttribute('target');
                
                // Si es un enlace interno (anchor) o abre en nueva pestaña, ignorar
                if (!href || href.startsWith('#') || target === '_blank') return;
                
                // Si es navegación a otra página interna (ej: /proyectos/cisco)
                e.preventDefault();
                nav?.classList.add('slide-out');
                
                setTimeout(() => {
                    window.location.href = href;
                }, 400); 
            });
        });
    });
</script>

<style>
    /* Estilo Cápsula */
    .nav-capsule {
        position: fixed;
        top: 50%;
        left: 40px;
        /* Estado inicial: Oculto a la izquierda */
        transform: translateY(-50%) translateX(-150px);
        opacity: 0;
        
        background-color: rgba(26, 26, 26, 0.8);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 9999px;
        padding: 1rem 0.5rem;
        flex-direction: column;
        gap: 1.5rem;
        z-index: 50;
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.5);
        
        /* Animación de entrada por defecto (cuando cargamos en cualquier pág) */
        animation: nav-slide-in 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
        animation-delay: 0.5s; /* Esperamos un poco a que cargue la pág */
    }

    /* Animación de salida (Navegación) */
    .nav-capsule.slide-out {
        animation: nav-slide-out 0.3s ease-in forwards;
    }

    /* CLASE CORREGIDA: Ocultar en el Home */
    /* Quitamos el background red y ajustamos la animación */
    :global(.nav-capsule.hidden-on-home) {
        animation: nav-slide-out 0.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards !important;
        pointer-events: none; /* Evitar clicks mientras no se ve */
    }

    @keyframes nav-slide-in {
        to {
            opacity: 1;
            transform: translateY(-50%) translateX(0);
        }
    }

    @keyframes nav-slide-out {
        from {
            opacity: 1;
            transform: translateY(-50%) translateX(0);
        }
        to {
            opacity: 0;
            transform: translateY(-50%) translateX(-150px);
        }
    }

    .side-nav-item {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        color: #AAAAAA;
        transition: all 0.3s ease;
    }

    .side-nav-item:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #FFFFFF;
        transform: scale(1.1);
    }

    /* Tooltip */
    .nav-label {
        position: absolute;
        left: 50px;
        background-color: #1a1a1a;
        color: white;
        padding: 4px 12px;
        border-radius: 4px;
        font-size: 0.8rem;
        white-space: nowrap;
        border: 1px solid rgba(255, 255, 255, 0.1);
        opacity: 0;
        visibility: hidden;
        transform: translateX(-10px);
        transition: all 0.2s ease;
        pointer-events: none;
    }

    /* Mostrar tooltip al hacer hover en el padre (group) */
    .side-nav-item:hover .nav-label {
        opacity: 1;
        visibility: visible;
        transform: translateX(0);
    }
</style>