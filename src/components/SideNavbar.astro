<script>
    document.addEventListener('DOMContentLoaded', () => {
        const nav = document.querySelector('.nav-capsule');
        
        // Detectar clicks en enlaces que llevan a otras páginas
        document.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', (e) => {
                const href = link.getAttribute('href');
                const target = link.getAttribute('target');
                
                // Si es un enlace interno (anchor) o abre en nueva pestaña, ignorar
                if (!href || href.startsWith('#') || target === '_blank') return;
                
                // Si es navegación a otra página interna
                e.preventDefault();
                nav?.classList.add('slide-out');
                
                setTimeout(() => {
                    window.location.href = href;
                }, 400); // Tiempo de la animación
            });
        });
    });
</script>

