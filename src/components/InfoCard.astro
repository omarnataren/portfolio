---
interface Props {
    title: string;
    description: string;
    icon?: string;
    iconColorClass?: string;
    hoverBorderColorClass?: string;
}

const { 
    title, 
    description, 
    icon = "fas fa-info-circle", 
    iconColorClass = "text-blue-400",
    hoverBorderColorClass = "hover:border-blue-500/30"
} = Astro.props;
---

<li class={`bg-highlight p-6 rounded-md border border-white/5 ${hoverBorderColorClass} transition-colors list-none`}>
    <h3 class="text-white font-bold text-lg mb-2 flex items-center gap-2">
        <i class={`${icon} ${iconColorClass}`}></i> {title}
    </h3>
    <p class="text-secondary text-sm">
        {description}
    </p>
</li>