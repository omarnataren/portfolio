---
interface Props {
    role: string;
    timeline: string;
    tags: string[];
    repoLink: string;
}

const { role, timeline, tags, repoLink } = Astro.props;
---

<aside class="lg:col-span-1 animated-item" style="transition-delay: 0.6s;">
    <div class="bg-highlight p-8 rounded-md border border-white/10 sticky top-24">
        
        <div class="mb-8">
            <h3 class="text-xs font-bold text-white/50 tracking-widest uppercase mb-2">ROL</h3>
            <p class="text-white text-lg font-medium">{role}</p>
            <p class="text-secondary text-sm mt-1">{timeline}</p>
        </div>

        <div class="mb-8">
            <h3 class="text-xs font-bold text-white/50 tracking-widest uppercase mb-4">TECH STACK</h3>
            <div class="flex flex-wrap gap-2">
                {tags.map((tag) => (
                    <span class="px-3 py-1 bg-white/5 border border-white/10 rounded-full text-xs text-white hover:bg-blue-500/20 transition-colors cursor-default">
                        {tag}
                    </span>
                ))}
            </div>
        </div>

        <a href={repoLink} target="_blank" class="block w-full py-4 bg-white text-black text-center font-bold hover:scale-105 transition-transform group">
            VER CÃ“DIGO <i class="fab fa-github ml-2 group-hover:rotate-12 transition-transform"></i>
        </a>

    </div>
</aside>