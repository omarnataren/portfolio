---
import AboutMe from '@components/AboutMe.astro';
import Contacto from '@components/Contacto.astro';
import Layout from '@layouts/Layout.astro';
import Particles from '@components/Particles.astro'; 
import SideNavbar from '@components/SideNavbar.astro';
import Stack from '@components/Stack.astro';
import Proyects from '@components/Proyects.astro';
---

<Layout title="Omar Nataren | Software Engineer" withSidebar={true} enableExitAnimations={true}>
    
    <SideNavbar />

    <main class="max-w-5xl mx-auto px-6 pb-12">
        
        <!-- Renderizamos las partículas -->
        <Particles />
        
        <section id="inicio" class="relative min-h-screen w-full mb-6 md:mb-0 flex flex-col justify-center items-center md:items-start border-b border-white/10 overflow-hidden">
            
            <div class="relative z-10 w-full max-w-5xl">
                <h1 id="hero-title" class="text-6xl md:text-9xl font-extrabold text-white mb-2 md:text-left">
                    OMAR NATAREN
                </h1>
                <h3 id="hero-subtitle" class="cursor-default text-xl md:text-4xl text-secondary mb-10 tracking-widest md:text-left">
                    // INGENIERO DE SOFTWARE - ESPECIALIZADO EN ARQUITECTURA DE SISTEMAS ESCALABLES Y DISEÑO UI/UX
                </h3>
                <div id="hero-buttons" class="flex flex-wrap justify-center md:justify-start gap-4">
                    <a href="#proyectos" name="proyectos" class="md:text-xl text-md text-white/80 border border-white/50 py-3 px-6 hover:bg-white hover:text-black transition duration-300 flex items-center justify-center">
                        [ EXPLORAR TRABAJO ]
                    </a>
                    <a href="https://github.com/omarnataren" aria-label="Go to Github" target="_blank" class="text-lg text-white/80 border border-white/50 w-14 h-14 flex items-center justify-center hover:bg-white hover:text-black transition duration-300">
                        <i class="fab fa-github text-2xl"></i>
                    </a>
                    <a href="https://www.linkedin.com/in/omar-nataren-arredondo-189531370/" aria-label="Go to LinkedIn" target="_blank" class="text-lg text-white/80 border border-white/50 w-14 h-14 flex items-center justify-center hover:bg-[#0077b5] hover:text-white hover:border-[#0077b5] transition duration-300">
                        <i class="fab fa-linkedin text-2xl"></i>
                    </a>
                </div>
            </div>
            
            <div class="absolute bottom-0 left-0 w-full h-32 bg-linear-to-t from-dark-bg to-transparent z-0 pointer-events-none"></div>

            <!-- Scroll Down Arrow with Rotating Circle -->
            <button id="scroll-down-btn" class="absolute bottom-10 left-1/2 transform -translate-x-1/2 z-20 cursor-pointer group flex items-center justify-center w-16 h-16" aria-label="Scroll down">
                <!-- Rotating Circle -->
                <div class="absolute inset-1 border-dashed border-2 border-white/60 rounded-full animate-[spin_10s_linear_infinite] group-hover:border-white transition-colors"></div>
                
                <i class="fas fa-arrow-down text-xl text-white/60 group-hover:text-white transition-colors"></i>
            </button>

        </section>

        <Proyects />

        <AboutMe />

        <Stack />

        <Contacto />
    </main>

    <script>
        let isNavigating = false;
        let initialHashLoad = false;

        // 1. Lógica de Inicialización: Verificar si venimos con un ancla (ej: #proyectos)
        const checkInitialScroll = () => {
            // Si hay hash en la URL (ej: #proyectos) y no es #inicio, permitimos el scroll
            if (window.location.hash && window.location.hash !== '#inicio') {
                document.body.style.overflow = 'auto';
                initialHashLoad = true;
                // Damos un margen de tiempo para que el navegador restaure la posición del scroll sin que el bloqueo lo intercepte
                setTimeout(() => {
                    initialHashLoad = false;
                }, 1500);
            } else {
                // Si estamos en el root puro, bloqueamos el scroll (Game Mode)
                document.body.style.overflow = 'hidden';
                window.scrollTo(0, 0);
            }
        };
        
        // Ejecutar inmediatamente al cargar
        checkInitialScroll();

        const unlockAndScroll = (targetId) => {
            isNavigating = true;
            document.body.style.overflow = 'auto'; 
            const target = document.getElementById(targetId);
            if (target) {
                target.scrollIntoView({ behavior: 'smooth' });
                // Actualizar URL para mantener estado
                history.pushState(null, null, `#${targetId}`);
            }
            
            setTimeout(() => {
                isNavigating = false;
            }, 1000);
        };

        // Detectar cuando el usuario regresa al inicio para volver a bloquear
        window.addEventListener('scroll', () => {
            // Si estamos en el proceso de carga inicial con hash, no bloqueamos nada
            if (initialHashLoad) return;

            // Aumentamos el umbral a 20px para móviles para evitar "rebotes" falsos
            if (!isNavigating && window.scrollY < 20) {
                document.body.style.overflow = 'hidden';
                window.scrollTo(0, 0); 
                
                // Limpiamos el hash si volvemos al inicio
                if (window.location.hash) {
                    history.replaceState(null, null, ' ');
                }
            }
        });

        // Botón de flecha inferior
        document.getElementById('scroll-down-btn')?.addEventListener('click', () => {
            unlockAndScroll('proyectos');
        });

        // Botón principal "EXPLORAR TRABAJO"
        document.querySelector('a[name="proyectos"]')?.addEventListener('click', (e) => {
            e.preventDefault();
            unlockAndScroll('proyectos');
        });

        // Manejo de clicks en el Navbar lateral para desbloquear el scroll
        document.querySelectorAll('.side-nav-item').forEach(link => {
            link.addEventListener('click', (e) => {
                const href = link.getAttribute('href');
                if (href && href.startsWith('#')) {
                    e.preventDefault();
                    const targetId = href.substring(1);
                    unlockAndScroll(targetId);
                }
            });
        });
    </script>

</Layout>